module: test

inputs:
	docker-host-ip:  
		type: string 
	username:  
		type: string
		
node_templates:
	sodalite-vm:
		type: sodalite.nodes.Compute
		properties:
			username:  get_input: username 
			docker_ip: get_input: docker-host-ip  
        
	docker-public-registry:
		type: sodalite.nodes.DockerRegistry
		properties:  
			docker_registry_url: "registry.hub.docker.com"
		requirements:
			host: 
				node: sodalite-vm
        
	site:
		type: sodalite.nodes.nginx.Site
		properties:  
			destination: "/tmp/index.html"
		requirements:
			host: 
				node: sodalite-vm   
        
	nginx-container:
		type: sodalite.nodes.DockerizedComponent
		properties:
			image_name: "library/nginx:latest"
			volumes: ["/tmp/index.html:/usr/share/nginx/html/index.html"]
			ports: ['5555:80']
			alias: "nginx-sodalite-test"
			registry_url: "fixme"
		requirements:
			host:  
				node: sodalite-vm
			registry: 
			 	node: docker-public-registry
