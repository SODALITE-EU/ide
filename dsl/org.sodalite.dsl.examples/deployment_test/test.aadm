module: test

import: docker
import: openstack

description: 'Simple app to test the deployment process'

inputs:

	ssh-key-name:
		type: string
	image-name:
		type: string
		default: "image_name"
	vm-name:
		type: string
	openstack-network-name:
		type: string
	security-groups:
		type: string
	flavor-name:
		type: string
	username:
		type: string
	env:
		type: map
		
node_templates:
	
	test-vm:
		type: openstack/sodalite.nodes.OpenStack.VM
		properties:
			key_name: get_input: ssh-key-name
			image: get_input: image-name
			name: get_input: vm-name
			network: get_input: openstack-network-name
			security_groups: get_input: security-groups
			flavor: get_input: flavor-name
			username: get_input: username
			env: get_input: env
			
	docker-host:
		type: docker/sodalite.nodes.DockerHost
		requirements:
			host:
				node: test/test-vm
				
outputs:
	public_ip:
		type: string
		description: 'The public IP of the provisioned VM'
		value: get_attribute:
			entity: test/test-vm 
			attribute: test/test-vm.public_address
		