groups:
- name: alert_rules
  rules:
  - alert: OutOfDiskSpace
    expr: (((node_filesystem_size_bytes{monitoring_id="9996c880-ccea-47be-9ee2-46df78740509"} * 100) / node_filesystem_size_bytes{monitoring_id="9996c880-ccea-47be-9ee2-46df78740509"}) < 25) and on(instance, device, mountpoint) node_filesystem_readonly{monitoring_id="9996c880-ccea-47be-9ee2-46df78740509"} == 0
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: Disk space running low (instance {{ $labels.instance }})
      description: 'Available disk space is low (< 25% left)\n  VALUE = {{ $value }}\n  LABELS: {{ $labels }}'
      monitoring_id: '9996c880-ccea-47be-9ee2-46df78740509'
      instance: '{{ $labels.instance }}'
      hpc: '{{ $labels.hpc }}'
  - alert: CoresHighCPU
    expr: (count by(instance)(((1 - rate(node_cpu_seconds_total{mode="idle", monitoring_id="9996c880-ccea-47be-9ee2-46df78740509"}[1m])) > 0.75)) / count by(instance)(node_cpu_seconds_total{mode="idle", monitoring_id="9996c880-ccea-47be-9ee2-46df78740509"})) or on() vector(0) > 0.5
    for: 5m
    labels:
      severity: warning
    annotations:
      summary: More than 50% of cores are above 75% load (instance {{ $labels.instance }})
      description: 'Percentage of cores above 75% load is > 50%\n  VALUE = {{ $value }}\n  LABELS: {{ $labels }}'
      monitoring_id: '9996c880-ccea-47be-9ee2-46df78740509'
      instance: '{{ $labels.instance }}'
      hpc: '{{ $labels.hpc }}'
  - alert: LowReceivedNetworkTraffic
    expr: sum by(instance)(increase(node_network_receive_bytes_total{monitoring_id="9996c880-ccea-47be-9ee2-46df78740509"}[1h])) < 30000000
    for: 5m
    labels:
      severity: warning
    annotations:
      summary: Low incoming network traffic (instance {{ $labels.instance }})
      description: 'Received network traffic in the last hour is < 30MB\n  VALUE = {{ $value }}\n  LABELS: {{ $labels }}'
      monitoring_id: '9996c880-ccea-47be-9ee2-46df78740509'
      instance: '{{ $labels.instance }}'
      hpc: '{{ $labels.hpc }}'